<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Actualizar Usuario</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" integrity="sha512-9usAa10IRO0HhonpyAIVpjrylPvoDwiPUiKdWk5t3PyolY1cOd4DSE0Ga+ri4AuTroPR5aQvXU9xC6qOPnzFeg==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="stylesheet" href="/css/new.css">

</head>
<body>
  <div class="container-fluid ">
    <div class="row">
        <div class="col">
            <%- layout('layouts/main') %>
        </div>
    </div>
    <div class="row">
      <div class="col">
        <% if (!user.admin) { %>
            <h1>No found page!!</h1>
        <% } else { %>
            <div class="login">
                <h1>Actualizar Usuario</h1>
                <br>
                <form action="/update" method="POST">
                    <!-- id -->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="id"><i class="fa-solid fa-id-card"></i></i></label>
                        </div>
                        <div class="col">
                            <input type="text" name="id" id="username" placeholder="Id" value="<%= users._id %>" class="form-control" disabled>
                        </div>
                    </div>
                    <br>

                    <!--  usuario -->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="username"><i class="fas fa-user"></i></label>
                        </div>
                        <div class="col">
                            <input type="username" name="username" id="username" placeholder="Username" value="<%= users.username %>" class="form-control">
                        </div>
                    </div>
                    <br>
                  
                    
                    <!--  email -->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="email">
                                <i class="fas fa-envelope"></i>
                            </label>
                        </div>
                        <div class="col">
                            <input type="email" id="email" name="email" value="<%= users.email %>" placeholder="Email" disabled></input>
                        </div>
                    </div>
                    <br>
                    <!--Permisos-->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="role">
                                <i class="fa-solid fa-user-gear"></i>
                            </label>
                        </div>

                        <div class="col">
                            <% if (users.admin) { %>
                                <select class="form-select" aria-label="Default select example" id="role" name="role">
                                    <option selected value="true">Administrador</option>
                                    <option value="false">Usuario</option>
                                </select>
                            <%} else { %>
                                <select class="form-select" aria-label="Default select example" id="role" name="role">
                                    <option  value="true">Administrador</option>
                                    <option selected value="false">Usuario</option>
                                </select>
                            <% } %>
                            
                        </div>
                    </div>
                    <br>  
        
                    <!--  Constraseña verif -->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="date">
                                <i class="fas fa-lock"></i>
                            </label>
                        </div>
                        <div class="col">
                            <input type="password" id="pass" name="pass" placeholder="Change Password" >
                        </div>
                    </div>
                    <br>
        
                    <!-- Contraseña -->
                    <div class="row  align-items-center">
                        <div class="col-auto">
                            <label for="password">
                                <i class="fas fa-lock"></i>
                            </label>
                        </div>
                        <div class="col">
                            <input type="password" id="password" name="password" placeholder="Confirm Password">
                        </div>
                    </div>
                    <br>
        
                    <button type="submit" class="btn btn-outline-primary">Actualizar</button>    
                  </form>
              </div>
              <a type="button" class="btn btn-outline-dark" href="/table"> 
                <i class="fa-solid fa-clipboard-list"></i>
                Listado de Usuarios
            </a>
        <% } %>

      </div>
    </div>
  </div>
  
  <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>